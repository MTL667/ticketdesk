// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Synced tickets from ClickUp
model Ticket {
  id              String    @id // ClickUp task ID
  ticketId        String?   // Custom field: Ticket ID (e.g., ZTIMER-39647)
  name            String
  description     String?   @db.Text
  status          String
  priority        String?
  
  // User association
  userEmail       String    // Email of the ticket owner
  
  // Additional fields
  businessUnit    String?
  app             String?   // Custom field: App/Application
  jiraStatus      String?
  jiraAssignee    String?
  jiraUrl         String?
  
  // Release notes
  releaseNotes    Boolean   @default(false)  // Custom field: Release notes = true
  dueDate         DateTime? // Due date from ClickUp
  
  // Timestamps from ClickUp
  clickupCreatedAt DateTime
  clickupUpdatedAt DateTime
  
  // Local sync timestamps
  syncedAt        DateTime  @default(now())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Attachments
  attachments   Attachment[]

  // Indexes for fast queries
  @@index([userEmail])
  @@index([status])
  @@index([ticketId])
  @@index([syncedAt])
  @@index([releaseNotes])
}

// Ticket attachments from ClickUp
model Attachment {
  id          String   @id // ClickUp attachment ID
  ticketId    String
  ticket      Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  title       String
  url         String   @db.Text
  extension   String?  // File extension (e.g., "pdf", "png")
  size        Int?     // File size in bytes
  dateAdded   DateTime
  createdAt   DateTime @default(now())
  
  @@index([ticketId])
}

// Track sync status
model SyncLog {
  id            String   @id @default(cuid())
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  status        String   // "running", "completed", "failed"
  ticketsSynced Int      @default(0)
  ticketsTotal  Int      @default(0)
  errorMessage  String?  @db.Text
  
  @@index([startedAt])
}

// App settings (banner, etc.)
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String?  @db.Text
  updatedAt DateTime @updatedAt
  updatedBy String?  // Email of admin who last updated
}

// Monitored services for system status
model MonitoredService {
  id            String   @id @default(cuid())
  name          String   // Display name (e.g., "Forms", "SAP Integration")
  zabbixHostId  String?  // Zabbix host ID
  zabbixHostName String? // Zabbix host name for display
  manualStatus  String?  // Manual override: "ok", "warning", "critical", "down"
  manualMessage String?  // Manual status message
  displayOrder  Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([isActive])
  @@index([displayOrder])
}

